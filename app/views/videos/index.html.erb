<div class="page-header"><h1>Listing videos</h1></div>

<div class="row">
	<div class="span9">

		<table class="bordered-table">
		  <tr>
		  	<th>Preview</th>
		    <th>Name</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>
		
		<% @videos.each do |video| %>
		  <tr>
		  	<td><%= image_tag video.uploaded_video.url(:preview) %></td>
		    <td><%= video.name %></td>
		    <td><%= link_to 'Show', video %></td>
		    <td><%= link_to 'Edit', edit_video_path(video) %></td>
		    <td><%= link_to 'Destroy', video, confirm: 'Are you sure?', method: :delete %></td>
		  </tr>
		<% end %>
		</table>
		
	</div>
</div>